<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="383.0" prefWidth="774.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninadelivery.controller.CreaProgrammazioneController">

    <top>
        <VBox fx:id="banner" alignment="CENTER" prefHeight="69.0" prefWidth="774.0" styleClass="banner" stylesheets="@../../../style.css">
            <Label fx:id="labelCreaProgrammazione" style="-fx-font-size: 18px; -fx-padding: 10px;" text="Crea Nuova Programmazione" textFill="#ecece7" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <!-- Padding removed for center section -->
        </VBox>
    </center>

    <bottom>
        <VBox prefHeight="419.0" prefWidth="774.0" spacing="10">
            <!-- Padding as Insets now -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Prox Consegna:" />
                <DatePicker fx:id="dateProxConsegna" />
                <Label text="Data Fine:" />
                <DatePicker fx:id="dateDataFine" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Orario:" />
                <TextField fx:id="txtOrario" />
                <Label text="Frequenza:" />
                <ComboBox fx:id="comboFrequenza" />
                <Label text="Cliente Email:" />
                <TextField fx:id="txtClienteEmail" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnSalva" onAction="#salvaProgrammazione" text="Salva" />
                <Button fx:id="btnElimina" onAction="#eliminaProgrammazione" text="Elimina" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>